---
import type { Ogp } from "../types/Ogp";
interface Props {
  ogp: Ogp
}
const { ogp } = Astro.props;
---
<head prefix="og: http://ogp.me/ns#">
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta property="og:image" content={ogp.thumbnail} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:url" content={ogp.url} />
  <meta property="og:type" content={ogp.pageType} />
  <meta property="og:title" content={ogp.title} />
  <meta property="og:description" content={ogp.description} />
  <meta property="og:site_name" content="息絶えた雑記" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@yadonantoka" />
  <title>息絶えた雑記</title>
</head>