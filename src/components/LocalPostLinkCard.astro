---
import type { Frontmatter } from '../types/Frontmatter'
import { DESCRIPTION_LIMIT_LENGTH } from '../util/const';
import { getImageOrDefault } from '../util/image'
import removeMarkdown from 'remove-markdown';

interface Props {
  url: string
  frontmatter: Frontmatter
  markdownText: string
}

const { url, frontmatter, markdownText } = Astro.props

const pattern = new RegExp('::[a-zA-Z0-9_]+\{([^{}]*)\}');
const replacedMarkdownText = removeMarkdown(markdownText).replace(pattern, '');

const description = (replacedMarkdownText.length <= DESCRIPTION_LIMIT_LENGTH ? replacedMarkdownText : replacedMarkdownText.slice(0, DESCRIPTION_LIMIT_LENGTH-1))

---


<a href={url} class="not-prose">
  <div class="grid max-w-full grid-cols-[30%_1fr_24px] gap-4 rounded-md border border-nord-6 text-nord-1 transition-colors duration-200 hover:bg-nord-6">
    <div class="h-32 overflow-hidden">
      <img src={getImageOrDefault(frontmatter.thumbnail)} class="object-cover object-center h-full w-full rounded-s-md"/>
    </div>
    <div class="flex flex-col py-2">
      <strong class="md:text-lg text-sm font-black text-nord-0 mb-2 line-clamp-2 leading-tight">{frontmatter.title}</strong>
      <p class="text-xs md:line-clamp-2 line-clamp-3">{description}</p>
      <span class="text-xs line-clamp-1 md:mt-5 mt-3">https://wgdp.dev</span>
    </div>
  </div>
</a>