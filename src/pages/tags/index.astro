---
import "../styles/global.css" 
import Head from '../../components/Head.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import type { Ogp } from '../../types/Ogp';
import { DEFAULT_THUMBNAIL } from '../../util/const';
import { tagsData } from '../../util/tags';
import type { Frontmatter } from '../../types/Frontmatter';

const { url } = Astro.props;
const ogp:Ogp = {
    title: "息絶えた雑記",
    description: "息絶えた雑記 Tags Index",
    thumbnail: DEFAULT_THUMBNAIL,
    url: url,
    pageType: "website"
}
---

<html lang="ja">
    <Head ogp={ogp} />
    <body class="antialiased bg-white text-nord-0 flex flex-col min-h-screen">
        <Header />
        <main class="container mx-auto flex-grow">
            <div class="mx-auto w-full px-6 xs:px-7 sm:px-10 max-w-screen-lg">
                <div class="flex justify-center my-28">
                    <h1 class="text-7xl text-nord-1 font-normal">Tags</h1>
                </div>
                <div class="text-xl text-nord-15 grid md:grid-cols-6 gap-4 my-28 leading-relaxed">
                    {tagsData.map((tag) =>
                        <a class="p-1 text-center rounded-3xl bg-white border border-nord-15 flex flex-col hover:bg-nord-15 hover:text-white" href={"/tags/" + tag.slug}>
                            #{tag.name}
                        </a>
                    )}
                </div>
            </div>
        </main>
        <Footer />
	</body>
</html>
